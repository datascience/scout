{{#partial "title"}}Scout - Browse - Entity{{/partial}} {{#partial
"NavBrowseClass"}}active{{/partial}} {{#partial "content"}}
<div class="container">
	{{#entity}}
	<ul class="breadcrumb">
		<li><a href="{{mustacheletPath}}/browse">Categories</a> <span
			class="divider">/</span></li>
		<li><a href="{{mustacheletPath}}/browse/type/{{type.id}}">{{type.name}}</a>
			<span class="divider">/</span></li>
		<li class="active">{{name}}</li>
	</ul>
	<div class="page-header">
		<h1>Entity</h1>
	</div>

	<dl class="dl-horizontal">
		<dt>Name</dt>
		<dd>{{name}}</dd>
	</dl>

	<h4>Properties</h4>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th style="width: 100%">Value</th>
				<th style="width: 10%">Action</th>
			</tr>
		</thead>
		<tbody>
			{{#values}}
			<tr>
				<td style="white-space: nowrap;">{{property.name}}</td>
				<td>{{#value-render this}}{{/value-render}}</td>
				<td><a class="btn btn-small btn-link"
					href="{{../mustacheletPath}}/browse/value/{{id}}"><i
						class=" icon-eye-open"></i></a></td>
			</tr>
			{{/values}}
		</tbody>
	</table>
	{{^values}}
	<div class="alert alert-warning">
		<b>Empty!</b> There are no defined property values for this entity.
	</div>
	{{/values}} {{/entity}} {{^entity}}
	<div class="alert alert-error">
		<b>Not found!</b> Could not find entity {{id}}.
	</div>
	{{/entity}}
</div>
{{/partial}} {{>base}}
