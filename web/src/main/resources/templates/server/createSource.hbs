{{#partial "title"}}Scout - Create Source{{/partial}} {{#partial
"content"}}

<div class="container">
	<div class="page-header">
		<h1>Create source</h1>
		<p>Describe a new external source of information.</p>
	</div>
	<form class="container form-horizontal" method="POST">
		<div class="form-group">
			<label for="name">Name</label> <input id="name" name="name"
				type="text" placeholder="Unique identifying name"
				class="form-control"> <span class="help-block">Identify
				the source of information with an unique name.</span>
		</div>
		<div class="form-group">
			<label for="description">Description</label>
			<textarea id="description" name="description" class="form-control"
				rows="3"></textarea>
			<span class="help-block">Describe the source of information,
				defining its purpose, the information that it contains and its
				relevance to digital preservation.</span>
		</div>
		<input type="hidden" name="redirect" value="{{redirect}}" /> <br />
		<br />
		<button type="submit" class="btn btn-primary">Create</button>

	</form>
</div>
{{/partial}} {{> base}}
