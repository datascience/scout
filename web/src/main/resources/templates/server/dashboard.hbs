{{#partial "title"}}Scout - Dashboard{{/partial}} {{#partial
"NavDashboardClass"}}active{{/partial}} {{#partial "content"}}
<div class="container">
	<div class="page-header">
		<h1>Dashboard</h1>
	</div>
	<p>All about your own information.</p>

	<h2>My requests</h2>
	{{#if requests}}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Description</th>
				<th style="width: 10%">Action</th>
			</tr>
		</thead>
		<tbody>{{#each requests}}
		<tr>
			<td>{{description}}</td>
			<td><a class="btn btn-small btn-link"
				href="{{mustacheletPath}}/browse/request/{{id}}"><i class=" icon-eye-open"></i></a></td>
		</tr>{{/each}}
		</tbody>
	</table>
	{{/if}}
	{{#unless requests}}
	<div class="alert alert-warning">
		You have no requests defined, create a request now!
	</div>
	<a class="btn btn-success" href="{{mustacheletPath}}/request/new"><i class="icon-plus icon-white"></i> Create request</a>
	{{/unless}}
</div>
{{/partial}} {{> base}}
