{{#partial "title"}}Scout - Dashboard{{/partial}} {{#partial
"NavDashboardClass"}}active{{/partial}} {{#partial "content"}}
<div class="container">
	<div class="page-header">
		<h1>Dashboard</h1>
	</div>
	<p>All about your own information.</p>

	<br/>
	<h4>My triggers</h4>
	{{#if requests}}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th style="width: 10%">Action</th>
			</tr>
		</thead>
		<tbody>{{#each requests}}
		<tr>
			<td>{{description}}</td>
			<td><a class="btn btn-small btn-link"
				href="{{mustacheletPath}}/browse/request/{{id}}"><i class=" icon-eye-open"></i></a></td>
		</tr>{{/each}}
		</tbody>
	</table>
	{{/if}}
	{{#unless requests}}
	<div class="alert alert-warning">
		You have no triggers defined, create one now!
	</div>
	{{/unless}}
	<a class="btn btn-success" href="{{mustacheletPath}}/request/new/advanced"><i class="icon-plus icon-white"></i> Create trigger</a>
</div>
<br/>
<div class="container">
   <h4>
    My policies
   </h4>
   {{#if objectives}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="">Objective</th>
                <th style="width: 25%">Measure</th>
                <th style="width: 100%">Description</th>
                <th style="">Modality</th>
                <th style="">Qualifier</th>
                <th style="">Value</th>
            </tr>
        </thead>
        <tbody>
            {{#each objectives}}
            <tr>
                <td style="white-space: nowrap;"><a href="#" data-toggle="tooltip" title="{{url}}">{{@index}}</a></td>
                <td><a href="#" data-toggle="tooltip" title="{{measure}}">{{measureName}}</a></td>
                <td>{{measureDescription}}</td>
                <td>{{modality}}</td>
                <td>{{qualifier}}</td>
                <td>{{value}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}
    {{#unless objectives}}
    <div class="alert alert-warning">
        <b>Empty!</b> There are no defined policies.
    </div>
    {{/unless}}
     <a class="btn btn-success" href="{{mustacheletPath}}/upload/policy/new"><i class="icon-plus icon-white"></i>Upload policies</a>
</div>
{{/partial}} {{> base}}
