{{#partial "title"}}Scout - Browse - Source{{/partial}} {{#partial
"NavBrowseClass"}}active{{/partial}} {{#partial "content"}}
<div class="container">
	{{#source}}
	<div class="page-header">
		<h1>
			{{name}} <small>source</small>
		</h1>
  	<span>Edit this source</span>
	</div>
	<form method="POST">
  <label>Description</label>
  <textarea name="description" rows="5">{{description}}</textarea>
  <span class="help-block">Describe the source of information,
    defining its purpose, the information that it contains and its
    relevance to digital preservation.</span>
    <input type="hidden" name="redirect" value="{{redirect}}"/>
     <br /> <br />
  <button type="submit" class="btn btn-primary">Edit</button>
  <a class="btn btn-inverse " href="{{mustacheletPath}}/browse/source/{{id}}">Cancel</a>
</form>
	{{/source}} {{^source}}
  <div class="alert alert-error">
    <b>Not found!</b> An error occurred. Could not find source.
  </div>
  {{/source}}
</div>
{{/partial}} {{>base}}
